{
  "compilerOptions": {
    "target": "ES2018",
    "jsx": "react-jsx",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.tsx",
    "./**/*.vue",
    "types/**.d.ts",
    "types/**/**.d.ts"
  ],
  "exclude": [
    "**/dist/*.ts",
    "**/dist/*.d.ts"
  ]
}
